<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="PolMedUMG.View.dMainView"
             Height="1000"
             Width="1000">


    <Grid Margin="20,20,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="65*" />



            <RowDefinition Height="126*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="757*"/>


        </Grid.RowDefinitions>
        <TextBlock  Height="40" Margin="24,-20,0,0" FontSize="26" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Width="192" RenderTransformOrigin="0.621,0.535" Grid.Column="1"><Run Language="en-150" Text="Strona główna"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" FontSize="20" Height="27" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="180" Margin="70,0,0,0"><Run Language="en-150" Text="Wyszukaj pacjenta"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" FontSize="20" Height="27" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Margin="70,20,0,0"><Run Text="Wyszukaj "/><Run Language="en-150" Text="lekarza"/></TextBlock>
        <TextBox  x:Name="dtxtPatientSearch" TextChanged="dtxtPatientSearch_TextChanged" HorizontalAlignment="Left" Height="21" Margin="70,97,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" />
        <TextBox  x:Name="dtxtDoctorSearch" TextChanged="dtxtDoctorSearch_TextChanged" HorizontalAlignment="Left" Height="21" Margin="70,67,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" />
        <Button  x:Name="dBtnPatientSearch" Content="Szukaj" HorizontalAlignment="Left" Height="19" Margin="267,97,0,0" Grid.Row="1" VerticalAlignment="Top" Width="70"/>
        <Button x:Name="dBtnDoctorSearch" Content="Szukaj" HorizontalAlignment="Left" Height="19" Margin="267,67,0,0" Grid.Row="3" VerticalAlignment="Top" Width="70"/>
        <Label x:Name="dLblPeselPlaceholder" HorizontalAlignment="Left" Height="26" IsHitTestVisible="False" Margin="70,92,0,0" FontSize="14" Grid.Row="1"  VerticalAlignment="Top" Width="176">
            <Run Language="en-150" Text="PESEL"/>
        </Label>
        <Label x:Name="dLblIdPlaceholder" HorizontalAlignment="Left" Height="26" IsHitTestVisible="False" Margin="70,62,0,0" FontSize="14" Grid.Row="3"  VerticalAlignment="Top" Width="176">
            <Run Language="en-150"  Text="ID LEKARZA"/>
        </Label>



    </Grid>

</UserControl>
